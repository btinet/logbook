{% extends 'app.html.twig' %}

{% block content %}
    <div class="container my-3">
        <div class="mx-auto bg-light border border-color-dark shadow-sm">
            <div class="body mb-3">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag-fill" viewBox="0 0 16 16">
                        <path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    </svg>
                    <span>Neuer Tag</span>
                </h2>
                <p class="mb-1">Erstelle einen neuen Tag.</p>
                <hr>
                <form id="tag_create_form" method="post" class="row row-sm-1 row-md-1 row-lg-1 row-lg-1 mb-0 needs-validation" novalidate>
                    <div>
                        <label for="name">Tag-Name</label>
                        <input type="text" name="name" id="name" class="input" value="{{ tag.name|default('') }}" placeholder="Tag-Name" autofocus required="required" aria-required="true">
                        <div class="invalid-feedback">
                            {{ trans["input"]["tag_name"]["empty"] }}
                        </div>
                    </div>
                    <input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token }}">
                </form>
            </div>
            <div class="px-3 py-2 bg-tertiary">
                <button form="tag_create_form" type="submit" class="btn btn-primary">{{ trans["button"]["submit"]["save"] }}</button>
                <a href="{{ route('tag') }}" class="btn btn-light text-dark">{{ trans["button"]["submit"]["abort"] }}</a>
            </div>
        </div>
    </div>
{% endblock %}
