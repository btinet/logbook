{% extends 'app.html.twig' %}

{% block content %}
    <div class="container my-3">
        <div class="mx-auto bg-light border border-color-dark shadow-sm">
            <div class="body mb-3">
                <h2>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-tag-fill" viewBox="0 0 16 16">
                        <path d="M2 1a1 1 0 0 0-1 1v4.586a1 1 0 0 0 .293.707l7 7a1 1 0 0 0 1.414 0l4.586-4.586a1 1 0 0 0 0-1.414l-7-7A1 1 0 0 0 6.586 1H2zm4 3.5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    </svg>
                    <span>Meine Tags</span>
                </h2>
                <p class="mb-1">Kategorisiere deine Aufgaben mit Tags.</p>
                <hr>
                <form method="post" action="{{ route('tag/delete') }}" id="tags_form" class="row" style="gap: 0">
                        {% for tag in tags %}
                            {{ include('tag/_tags.html.twig') }}
                            <input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token }}">
                            {% else %}
                                <span>Noch keine Tags vorhanden!</span>
                    {% endfor %}
                </form>
            </div>
            <div class="px-3 py-2 bg-tertiary d-flex justify-content-space-between align-items-center">
                <a href="{{ route('tag/new') }}" class="btn btn-primary px-2">
                    Neu
                </a>
                <button form="tags_form" id="list_delete" type="submit" class="btn btn-danger disabled">
                    {{ trans["button"]["submit"]["delete"] }}
                </button>
            </div>
        </div>
    </div>
{% endblock %}


