<a class="btn btn-light text-dark d-flex justify-content-space-between align-items-center">
    <div class="d-flex justify-content-start align-items-center">
        <div class="me-1">
            <label for="state_{{ task.id }}">Erledigt</label>
            <input type="checkbox" name="tasks[]" id="state_{{ task.id }}" value="{{ task.id }}">
        </div>
        <div class="d-flex flex-column align-items-flex-start">
            <span class="text-emphasised">{{ task.description }}</span>
            <span class="small">{{ task.dueDate|date('d.m.') }}</span>
        </div>
    </div>
    <span class="d-flex justify-content-end px-content-1">
    <span class="small bg-tertiary text-dark">{{ task.name }}</span>
</span>
</a>
{% if now|date('d.m.Y') - task.dueDate|date('d.m.Y') > 1   %}
    <span class="bg-danger" style="height: 2px;width: 100%"></span>
{% endif %}
{% if now|date('d.m.Y') - task.dueDate|date('d.m.Y') == 1   %}
    <span class="bg-warning" style="height: 2px;width: 100%"></span>
{% endif %}
{% if now|date('d.m.Y') == task.dueDate|date('d.m.Y')  %}
    <span class="bg-success" style="height: 2px;width: 100%"></span>
{% endif %}
{% if now|date('d.m.Y') - task.dueDate|date('d.m.Y') <= -1 %}
    <span class="bg-primary" style="height: 2px;width: 100%"></span>
{% endif %}